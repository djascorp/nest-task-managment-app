// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User{
  id Int @default(autoincrement()) @id
  username String @unique
  password String
  name String?
  projects Project[]
  setting Setting?
}

model Project{
  id Int @default(autoincrement()) @id
  name String 
  visibility String @default("PUBLIC")
  user User? @relation(fields: [userId],references: [id])
  userId Int?
}

model Statustype{
  id Int @default(autoincrement()) @id
  name String
  status Status[]
}

model Setting{
  id Int @default(autoincrement()) @id
  user User? @relation(fields: [userId],references: [id]) 
  userId Int? @unique
  status SettingOnStatus[]
}

model Status{
  id Int @default(autoincrement()) @id
  name String
  type Statustype @relation(fields: [statustypeId],references: [id])
  statustypeId Int
  settings SettingOnStatus[]
}

model SettingOnStatus{
  status Status @relation(fields: [statusId],references: [id])
  settings Setting @relation(fields: [settingId],references: [id])
  statusId Int
  settingId Int
  assignedAt DateTime @default(now())
  @@id([statusId,settingId])
}

